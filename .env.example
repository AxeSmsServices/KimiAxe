# Server
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kimiaxe
DB_USER=postgres
DB_PASSWORD=your_password_here
